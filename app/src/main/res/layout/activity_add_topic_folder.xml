<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color"
    tools:context=".AddTopicFolderActivity">

    <LinearLayout
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp"
        android:gravity="center_vertical"
        android:background="@color/dark_color"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/returnBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/white_baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/bevietnampro_extrabold"
            android:text="@string/add_topic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_marginStart="10dp"
            android:id="@+id/acceptTopicBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_check_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:text="@string/add_folder"
        android:textColor="@color/secondary_color"
        app:icon="@drawable/baseline_add_24"
        app:iconTint="@color/secondary_color"
        app:iconGravity="textStart"
        app:backgroundTint="@null"
        android:id="@+id/addFolderBtn"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/folderRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>